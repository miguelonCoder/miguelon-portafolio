---
import "../styles/card.css";

interface Props {
	title: string;
	body: string;
	href: string;
	hrefString?: string
	skills: Array<{ name: string; link: string }>;
}

const { href, title, body, skills, hrefString = 'Ver resultados' } = Astro.props;
---

<div class="card card-container">
	<div class="title-container">
		<h3>{title}</h3>
	</div>
	<div class="body-container">
		<p>{body}</p>
	</div>
	<div class="footer-card">
		<div class="link-container">
			<a class="link" target="_blank" href={href}>{hrefString}</a>
		</div>
		<div>
			<ul class="list-skills">
				{
					skills.map((skill) => {
						console.log(skill);

						return (
							<a href={skill.link} target="_blank">
								<img
									class="img-skill"
									src={`./images/${skill.name.toLowerCase()}.png`}
									alt=""
								/>
							</a>
						);
					})
				}
			</ul>
		</div>
	</div>
</div>
