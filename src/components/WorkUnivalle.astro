    skills={[
      { name: "graphql", link: "hhttps://graphql.org/" },
      { name: "strapi", link: "https://strapi.io/" },
      { name: "threejs", link: "https://threejs.org/" },
      { name: "React", link: "https://react.dev/" },
    ]}
  />
